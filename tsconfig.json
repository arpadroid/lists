{
    "extends": "./node_modules/@arpadroid/module/src/tsconfig/esnext/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "moduleResolution": "bundler",
        "outDir": "./.tmp/.types",
        "emitDeclarationOnly": true,
        "composite": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "preserveSymlinks": true
    },
    "include": ["src/**/*", "src/mockData/**/*.json"],
    "exclude": [
        "node_modules",
        "dist",
        ".tmp",
        "**/*.stories.js",
        "**/*.stories.util.js",
        "**/stories.util.js",
        "**/*.stories.types.d.ts"
    ]
}
